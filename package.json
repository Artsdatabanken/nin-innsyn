{
  "name": "ratatouille",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "graphql-request": "^1.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "material-ui": "^0.20.0",
    "prettier": "^1.10.2",
    "rc-slider": "^8.5.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-map-gl": "^3.1.5",
    "react-responsive": "^4.0.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "^1.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --coverage",
    "test:watch": "react-scripts test --env=jsdom",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public -o build/storybook",
    "report-coverage": "coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.16",
    "@storybook/addon-knobs": "^3.2.16",
    "@storybook/addon-links": "^3.2.16",
    "@storybook/addon-storyshots": "^3.2.16",
    "@storybook/react": "^3.2.16",
    "coveralls": "^3.0.0",
    "react-test-renderer": "^16.2.0",
    "storybook-addon-material-ui": "^0.8.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!src/**/__tests__/*.{js}"
    ]
  }
}
